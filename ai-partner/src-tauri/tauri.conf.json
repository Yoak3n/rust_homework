{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ai-partner",
  "version": "0.1.4",
  "identifier": "com.ai-partner.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:10420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ai-partner",
        "resizable": true,
        "center": true,
        "decorations": false,
        "width": 1024,
        "minWidth": 600,
        "minHeight": 600,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources":[
      "setting.yaml"
    ]
  }
}
